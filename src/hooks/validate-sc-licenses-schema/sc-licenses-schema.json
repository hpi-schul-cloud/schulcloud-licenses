{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Schul-Cloud License",
    "type": "object",
    "properties": {
      "name":  {
        "description": "The name of the license",
        "type": "string"
      },
      "odrl": {
        "description": "The content of the license as odrl policy",
        "type": "object"
      },
      "options": {
        "description": "The options to select from when forming an agreement",
        "type": "object"
      }
    },
    "required": ["name", "odrl", "options"]
  }